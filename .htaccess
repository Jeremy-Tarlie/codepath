# =====================================
# ACTIVER LE REWRITE ENGINE
# =====================================
RewriteEngine On

# =====================================
# HEADERS DE SÉCURITÉ A+
# =====================================
<IfModule mod_headers.c>
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://cdn.jsdelivr.net https://challenges.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://challenges.cloudflare.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://cloudflareinsights.com; frame-src https://challenges.cloudflare.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "DENY"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    Header always set Cross-Origin-Embedder-Policy "require-corp"
    Header always set Cross-Origin-Opener-Policy "same-origin"
    Header always set Cross-Origin-Resource-Policy "same-site"
    Header always unset X-Powered-By
</IfModule>

# =====================================
# PROTECTION DES FICHIERS SENSIBLES
# =====================================
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak)$">
    Order allow,deny
    Deny from all
</FilesMatch>

RewriteCond %{THE_REQUEST} \s/pages/[^/]+/(get_csrf_token|validator)\.php[\s?] [NC]
RewriteRule ^pages/.+/(get_csrf_token|validator)\.php$ - [F,L]

# =====================================
# REDIRECTION HTTPS FORCÉE (Cloudflare)
# =====================================
RewriteCond %{HTTP:CF-Visitor} '"scheme":"http"'
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =====================================
# REDIRECTIONS PAGES PRINCIPALES
# =====================================
RewriteRule ^price/?$ pages/price/index.html [L]
RewriteRule ^price\.css$ pages/price/price.css [L]

RewriteRule ^contact/?$ pages/contact/index.php [L]
RewriteRule ^contact\.css$ pages/contact/contact.css [L]
RewriteRule ^contact/(validator|get_csrf_token)\.php$ pages/contact/$1.php [L]

RewriteRule ^devis/?$ pages/devis/index.php [L]
RewriteRule ^devis\.css$ pages/devis/devis.css [L]
RewriteRule ^devis/(main|modal)\.js$ pages/devis/$1.js [L]
RewriteRule ^devis/validator\.php$ pages/devis/validator.php [L]
RewriteRule ^devis/create_devis\.json$ pages/devis/create_devis.json [L]

# =====================================
# PAGES LÉGALES
# =====================================
RewriteRule ^(mentions-legales|politique-confidentialite|politique-cookies|conditions-generales)/?$ pages/$1/$1.html [L]
RewriteRule ^(mentions-legales|politique-confidentialite|politique-cookies|conditions-generales)\.(css|js)$ pages/$1/$1.$2 [L]

# =====================================
# TEMPLATES
# =====================================
RewriteRule ^templates/1/?$ templates/assos1/index.html [L]
RewriteRule ^templates/1/(styles\.css|script\.js)$ templates/assos1/$1 [L]

RewriteRule ^templates/2/?$ templates/assos2/index.html [L]
RewriteRule ^templates/2/(styles\.css|main\.js)$ templates/assos2/$1 [L]

RewriteRule ^templates/3/?$ templates/chateau/index.html [L]
RewriteRule ^templates/3/(styles\.css|script\.js)$ templates/chateau/$1 [L]

RewriteRule ^templates/4/?$ templates/commerce/index.html [L]
RewriteRule ^templates/4/(styles\.css|main\.js)$ templates/commerce/$1 [L]

RewriteRule ^templates/5/?$ templates/commerce2/index.html [L]
RewriteRule ^templates/5/(styles\.css|main\.js|cart\.js)$ templates/commerce2/$1 [L]

RewriteRule ^templates/6/?$ templates/post/index.html [L]
RewriteRule ^templates/6/(styles\.css|script\.js)$ templates/post/$1 [L]

# =====================================
# REDIRECTION 404 PERSONNALISÉE
# =====================================
ErrorDocument 404 /404

# Rediriger les URL non existantes vers le fichier réel
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ /pages/404/index.html [L]

# Ressources CSS/JS pour la page 404
RewriteRule ^404/404\.css$ /pages/404/404.css [L]
RewriteRule ^404/404\.js$ /pages/404/404.js [L]

# =====================================
# COMPRESSION GZIP
# =====================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# =====================================
# CONDITIONS FINALES
# =====================================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
